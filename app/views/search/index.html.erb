<h1><%= @nation %></h1>
<p>
<strong>Total Number of Residents:</strong> <%= @characters.length %></p>
<% @characters.each do |character| %>
  <ul class="character">
  <li class="name"><%= character.name %></li>
  <% if character.photo.present? %>
    <li class="photo"><%= image_tag(character.photo) %></li>
  <% end %>
  <li class="allies"><strong>Allies:</strong> <%= character.allies %></li>
  <li class="enemies"><strong>Enemies:</strong> <%= character.enemies %></li>
  <li class="affiliation"><strong>Affiliation:</strong> <%= character.affiliation %></li>
  </ul>
<% end %>